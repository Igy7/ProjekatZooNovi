@model IEnumerable<ZooVrt.Models.KorisnikViewModel>
@using ZooVrt.Areas.Radnik.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Korisnici</h2>
@if (Request.IsAuthenticated && User.IsInRole("Radnik"))
{
<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-condensed table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        @Html.Partial("_TableButtonsPartial",
           new SmallButtonModel { UserId = item.Id })
    </tr>
}

</table>
}