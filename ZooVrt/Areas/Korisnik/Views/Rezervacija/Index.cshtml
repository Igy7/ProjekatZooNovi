@model IEnumerable<ZooVrt.Entities.Rezervacija>
@using ZooVrt.Areas.Korisnik.Models;
@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2><b>Rezervacije</b></h2>
<br />
<p>
    <div>
        @Html.Partial("_NapraviRezervacijuPartial")
    </div>
</p>
<table class="table table-striped">
    <tr class="success">
        <th>
            Korisnicko ime
        </th>
        <th>
            Dogadjaj
        </th>
        <th>
            Termin
        </th>
        <th>
            Broj rezervisanih karata
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.korisnickoIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dogadjaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.termin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brRezervisanihKarata)
            </td>
            @Html.Partial("_TableButtonsPartial",
           new SmallButtonModel { rezervacijaId = item.rezervacijaID })
        </tr>
    }
</table>
